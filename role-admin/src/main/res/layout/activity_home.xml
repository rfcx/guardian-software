<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:background="#000000"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			app:layout_constraintTop_toTopOf="parent"
			android:background="@android:color/white">

	</androidx.appcompat.widget.Toolbar>

	<Switch
			android:id="@+id/monitorToggle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="i2c monitor"
			android:layout_marginStart="10dp"
			android:textColor="@android:color/white"
			app:layout_constraintBottom_toTopOf="@id/i2cConnectTextView"
			app:layout_constraintStart_toStartOf="parent"/>

	<TextView
			android:id="@+id/i2cConnectTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="i2c connection:"
			android:layout_marginStart="10dp"
			android:textColor="@android:color/white"
			app:layout_constraintBottom_toTopOf="@id/i2cLayout"
			app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:id="@+id/i2cConnectStatusTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="disconnected"
			android:layout_marginStart="10dp"
			android:textColor="@android:color/white"
			app:layout_constraintStart_toEndOf="@id/i2cConnectTextView"
			app:layout_constraintTop_toTopOf="@id/i2cConnectTextView"
			app:layout_constraintBottom_toBottomOf="@id/i2cConnectTextView"/>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/i2cLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent">
		<TextView
				android:id="@+id/systemTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				android:text="System"
				android:textColor="@android:color/white"/>
		<TextView
				android:id="@+id/systemResultTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="4dp"
				android:text="0mV - 0mA - 0deg - 0mW"
				app:layout_constraintStart_toEndOf="@id/systemTextView"
				app:layout_constraintTop_toTopOf="parent"
				android:textColor="@android:color/white"/>
		<TextView
				android:id="@+id/inputTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@id/systemTextView"
				app:layout_constraintStart_toStartOf="parent"
				android:text="Input"
				android:textColor="@android:color/white"/>
		<TextView
				android:id="@+id/inputResultTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0mV - 0mA - 0deg - 0mW"
				app:layout_constraintStart_toStartOf="@id/systemResultTextView"
				app:layout_constraintTop_toBottomOf="@id/systemResultTextView"
				android:textColor="@android:color/white"/>
		<TextView
				android:id="@+id/batteryTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@id/inputTextView"
				app:layout_constraintStart_toStartOf="parent"
				android:text="Battery"
				android:textColor="@android:color/white"/>
		<TextView
				android:id="@+id/batteryResultTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0mV - 0mA - 0deg - 0mW"
				app:layout_constraintStart_toStartOf="@id/inputResultTextView"
				app:layout_constraintTop_toBottomOf="@id/inputResultTextView"
				android:textColor="@android:color/white"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
