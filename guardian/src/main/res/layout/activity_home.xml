<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ToolBarStyle"
            app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/unregisteredView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

        <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_style1"
                android:text="@string/register"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/registerGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
                android:id="@+id/registerInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/gray_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_padding_normal"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardian ID: " />

            <TextView
                    android:id="@+id/deviceIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxxxxx"
                    android:textSize="15sp"
                    android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/loginGroupView"
            app:layout_constraintTop_toBottomOf="@id/registerGroup">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rootView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/registeredView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                            android:id="@+id/start_stop_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_padding_normal"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                                android:id="@+id/status_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_padding_normal"
                                android:orientation="vertical">

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp">

                                <TextView
                                        android:id="@+id/recordStatusTopic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Record status: "
                                        android:textColor="@color/text_black" />

                                <TextView
                                        android:id="@+id/recordStatusText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp">

                                <TextView
                                        android:id="@+id/checkInTopic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Last CheckIn time: "
                                        android:textColor="@color/text_black" />

                                <TextView
                                        android:id="@+id/checkInText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp">

                                <TextView
                                        android:id="@+id/sizeTopic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Last CheckIn size: "
                                        android:textColor="@color/text_black" />

                                <TextView
                                        android:id="@+id/sizeText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp">

                                <TextView
                                        android:id="@+id/recordTopic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Recorded time: "
                                        android:textColor="@color/text_black" />

                                <TextView
                                        android:id="@+id/recordTimeText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp">

                                <TextView
                                        android:id="@+id/fileTopic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Synced / Local files: "
                                        android:textColor="@color/text_black" />

                                <TextView
                                        android:id="@+id/fileRecordedSyncedText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                            </LinearLayout>
                        </LinearLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/margin_padding_normal"
                                android:layout_marginTop="@dimen/margin_padding_small"
                                android:background="@color/grey_light" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/configurationLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_padding_normal">

                            <TextView
                                    android:id="@+id/sampleRateTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sample rate"
                                    android:textColor="@color/text_black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <RadioGroup
                                    android:id="@+id/rgSampleRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/sampleRateTextView">

                                <RadioButton
                                        android:id="@+id/rb8Hz"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="8Hz"
                                        android:textSize="12sp" />

                                <RadioButton
                                        android:id="@+id/rb12Hz"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12Hz"
                                        android:textSize="12sp" />

                                <RadioButton
                                        android:id="@+id/rb24Hz"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="24Hz"
                                        android:textSize="12sp" />

                                <RadioButton
                                        android:id="@+id/rb48Hz"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="48Hz"
                                        android:textSize="12sp" />
                            </RadioGroup>

                            <TextView
                                    android:id="@+id/fileFormatTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="File format"
                                    android:textColor="@color/text_black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/rgSampleRate" />

                            <RadioGroup
                                    android:id="@+id/rgFileFormat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/fileFormatTextView">

                                <RadioButton
                                        android:id="@+id/rbOpus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="opus"
                                        android:textSize="12sp" />

                                <RadioButton
                                        android:id="@+id/rbFlac"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="flac"
                                        android:textSize="12sp" />
                            </RadioGroup>

                            <TextView
                                    android:id="@+id/durationTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Duration"
                                    android:textColor="@color/text_black"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/rgFileFormat" />

                            <EditText
                                    android:id="@+id/durationEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingEnd="@dimen/margin_padding_normal"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/durationTextView" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="seconds"
                                    android:textColor="@color/text_black"
                                    app:layout_constraintBottom_toBottomOf="@id/durationEditText"
                                    app:layout_constraintStart_toEndOf="@id/durationEditText"
                                    app:layout_constraintTop_toTopOf="@id/durationEditText" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/margin_padding_normal"
                                android:layout_marginTop="@dimen/margin_padding_small"
                                android:background="@color/grey_light" />
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/start_stop_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_padding_normal"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/appVersionText">

                        <Button
                                android:id="@+id/startButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="start" />

                        <Button
                                android:id="@+id/stopButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="stop" />
                    </LinearLayout>

                    <TextView
                            android:id="@+id/appVersionText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="@dimen/margin_padding_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/switchView"
                            tools:text="1.0.0" />

                    <LinearLayout
                            android:id="@+id/switchView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_padding_normal"
                            android:layout_marginTop="@dimen/margin_padding_small"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/start_stop_group">

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ProgressBar
                        android:id="@+id/registerProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_padding_large"
                        android:theme="@style/AppTheme.LoadingProgress"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginGroupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/button_style1"
                android:text="@string/login"
                android:textAllCaps="true"
                android:textColor="@color/text_white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loginInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_30"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logged in as: "
                        android:textSize="15sp" />

                <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxx"
                        android:textSize="15sp"
                        android:textStyle="bold" />
            </LinearLayout>

            <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@color/text_error"
                    android:text="@string/logout"
                    android:textColor="@color/text_white"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
